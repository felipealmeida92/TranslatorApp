<h1>New Translation</h1>

<%= form_with(model: @translation, local: true) do |form| %>
  <div class="field">
    <%= form.label :original_text %>
    <%= form.text_area :original_text %>
  </div>

  <div class="field">
    <%= form.label :source_lang %>
    <%= form.text_field :source_lang %>
  </div>

  <div class="field">
    <%= form.label :target_lang %>
    <%= form.text_field :target_lang %>
  </div>

  <div class="actions">
    <%= form.submit "Translate" %>
  </div>
<% end %>

